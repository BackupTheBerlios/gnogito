<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="gnogitoprototype"
   name="GnogitoPlugin"
   version="1.0.0"
   provider-name="KleineBrothers">

   <runtime>
      <library name="gnogitoprototype.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime.compatibility"/>
      <import plugin="org.eclipse.ui"/>
   </requires>


   <extension
         id="GnogitoPrototype"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="gnogitoprototype.GnogitoPrototype">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="GnogitoPerspective"
            class="gnogitoprototype.GnogitoPerspective"
            id="gnogitoprototype.GnogitoPerspective">
      </perspective>
   </extension>

</plugin>
